{
  "manifest_version": 3,
  "name": "Nudge AI",
  "version": "1.0",
  "description": "Takes periodic screenshots, analyzes them via the Google Gemini API, and nudges you if you're unproductive.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "windows",
    "scripting",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.jpg"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/index.html",
    "default_title": "Nudge AI",
    "default_icon": {
      "16": "icon.jpg",
      "48": "icon.jpg",
      "128": "icon.jpg"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "<all_urls>"
  ]
}
